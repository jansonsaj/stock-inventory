
<!doctype html>

<html lang="en">
	<head>
		{{> head
			title="Create an account"
			description="Create an account in the Stock Control and Management system"}}
		<script type="module" src="{{host}}/js/main.js"></script>
	</head>
	<body>
		{{> header title="Register"}}
		{{> message}}
		<main>
			<section>
				<h3>Create an account</h3>
				<form action="/register" enctype="multipart/form-data" method="post">
					<label for="user">Username
						<input type="text" name="user" placeholder="Username" value="{{body.user}}" required
							pattern="^[a-zA-Z0-9]+$" title="You can only use alphanumeric characters without spaces">
					</label>
					<label for="pass">Password
						<input type="password" name="pass" placeholder="Password" value="{{body.pass}}" required>
					</label>
					<label for="email">Email
						<input type="email" name="email" placeholder="Email address" value="{{body.email}}" required>
					</label>
					<input type="submit" value="Create">
				</form>
			</section>
		</main>
		{{> footer}}
	</body>
</html>
