<!doctype html>

<html lang="en">

<head>
	{{> head
		title="Items to order"
		description="View a list of items that need ordering"}}
	<script type="module" src="{{host}}/js/main.js"></script>
</head>

<body>
	{{> header title="Items to order"}}
	{{> message}}
	<main>
		<section>
			<table>
				<thead>
					<tr>
						<th>Name</th>
						<th>Wholesale price</th>
						<th>Current Stock</th>
						<th>Count to order</th>
						<th>Order price</th>
					</tr>
				</thead>
				<tbody>
					{{#each items as |item|}}
						<tr>
							<td><a href="/inventory/items/{{item.barcode}}" >{{item.name}}</a></td>
							<td>£{{asPounds item.wholesale_price}}</td>
							<td>{{item.stock}}</td>
							<td>{{item.order_count}}</td>
							<td>£{{asPounds item.order_price}}</td>
						</tr>
					{{else}}
						<tr>
							<td colspan="5">No items need to be ordered</td>
						</tr>
					{{/each}}
				</tbody>
				<tfoot>
					<tr>
						<th colspan="4">Total order price: </th> 
						<td>£{{asPounds totalOrderPrice}}</td>
					</tr>
				</tfoot>
			</table>
		</section>
	</main>
	{{> footer}}
</body>

</html>