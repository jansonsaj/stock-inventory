<!doctype html>

<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Home Page</title>
	<meta name="description" content="form to add new books">
	<meta name="author" content="Mark Tyers">
	<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
	<script type="module" src="{{host}}/js/main.js"></script>
</head>

<body>
	{{> header title="All items"}}
	{{> message}}
	<main>
		<section>
			<table>
				<thead>
					<tr>
						<th>Name</th>
						<th>Current Stock</th>
					</tr>
				</thead>
				<tbody>
					{{#each items as |item|}}
						<tr>
							<td><a href="/inventory/items/{{item.barcode}}" >{{item.name}}</a></td>
							<td>{{item.stock}}</td>
						</tr>
					{{else}}
						<tr>
							<td colspan="2">There are no items in the inventory</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		</section>
	</main>
</body>

</html>