<!doctype html>

<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Home Page</title>
	<meta name="description" content="form to add new books">
	<meta name="author" content="Mark Tyers">
	<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.6/handlebars.min.js"></script>
	<script type="module" src="{{host}}/js/main.js"></script>
</head>

<body>
	<header>
		<h1>Order Summary</h1>
		<a href="/logout">Log out</a>
	</header>
	{{> message}}
	<main>
		<section>
			<table>
				<thead>
					<tr>
						<th>Name</th>
						<th>Count</th>
						<th>Unit Price</th>
						<th>Price</th>
					</tr>
				</thead>
				<tbody>
					{{#each items as |item|}}
						<tr>
							<td>{{item.name}}</td>
							<td>{{item.count}}</td>
							<td>£{{asPounds item.retail_price}}</td>
							<td>£{{asPounds item.total_retail_price}}</td>
						</tr>
					{{/each}}
				</tbody>
				<tfoot>
					<tr>
						<th colspan="3">Total:</th> 
						<td>£{{asPounds totalPrice}}</td>
					</tr>
				</tfoot>
			</table>
			<form action="/inventory/complete-order" method="POST">
				<input type="hidden" name="items" value="{{stringify items}}">
				<a href="/inventory">Cancel</a>
				<input type="submit" value="Complete transaction">
			</form>
		</section>
	</main>
</body>

</html>